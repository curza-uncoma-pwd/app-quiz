{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.d.ts",
    "client/**/*.tsx",
    "client/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
